<Window x:Class="WPFAppDeneme.EntryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="400" Width="600">
    <Grid Background="#003c7b">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to MTAG Apps Market" Foreground="White" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Enter Engineering" Width="200" Height="50" Click="EnterEngineering_Click" Margin="0,10"/>
            <Button Content="Enter Plugins" Width="200" Height="50" Click="EnterPlugins_Click" Margin="0,10"/>
            <Button Content="Enter Productivity" Width="200" Height="50" Click="EnterProductivity_Click" Margin="0,10"/>
            <Button Content="Admin" Width="200" Height="50" Click="EnterAdmin_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
